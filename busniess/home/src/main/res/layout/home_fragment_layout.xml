<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <com.bee.android.common.view.pageState.PageStateRelativeLayout
        android:id="@+id/home_frg_page_state_layout"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="@dimen/size_0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/home_frg_smart_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_frg_rl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/size_60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.bee.android.common.view.smartRefresh.CommonRefreshBeeFooter
                android:id="@+id/home_Frg_foot_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srlClassicsSpinnerStyle="FixedBehind" />
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </com.bee.android.common.view.pageState.PageStateRelativeLayout>

    <RelativeLayout
        android:id="@+id/home_frg_top_name_layou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/chn_color_ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/home_frg_top_name_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_60dp"
            android:gravity="center"
            android:text="@string/home_header_name"
            android:textColor="@color/chn_color_222222"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:id="@+id/home_frg_player_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_2dp"
        android:background="@android:color/holo_red_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />

</androidx.constraintlayout.widget.ConstraintLayout>