<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_283dp">

    <TextView
        android:id="@+id/home_course_experience_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_15dp"
        android:layout_marginTop="@dimen/size_20dp"
        android:textColor="@color/chn_color_222222"
        android:textSize="@dimen/sp_21"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tool:text="体验课" />

    <TextView
        android:id="@+id/home_course_discount_name_tv"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_5dp"
        android:layout_marginTop="@dimen/size_24dp"
        android:layout_marginEnd="@dimen/size_15dp"
        android:background="@drawable/home_fragment_icon_orange"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingStart="@dimen/size_10dp"
        android:paddingEnd="@dimen/size_10dp"
        android:textColor="@color/common_color_ff8a66"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toRightOf="@id/home_course_experience_name_tv"
        app:layout_constraintTop_toTopOf="parent"
        tool:text="限时赠送249元代金券" />

    <TextView
        android:id="@+id/home_course_class_open_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_15dp"
        android:layout_marginTop="@dimen/size_54dp"
        android:textColor="@color/common_color_999999"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tool:text="9月9日开课" />

    <TextView
        android:id="@+id/home_course_experience_point_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_8dp"
        android:paddingStart="@dimen/size_3dp"
        android:paddingTop="@dimen/size_1dp"
        android:paddingEnd="@dimen/size_3dp"
        android:paddingBottom="@dimen/size_1dp"
        android:textColor="@color/common_color_999999"
        android:textSize="@dimen/sp_12"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@id/home_course_class_open_date_tv"
        app:layout_constraintLeft_toRightOf="@id/home_course_class_open_date_tv"
        tool:text="适合幼小衔接" />

    <TextView
        android:id="@+id/home_course_price_unit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/size_4dp"
        android:paddingEnd="@dimen/size_15dp"
        android:textColor="@color/chn_color_f76561"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/home_course_experience_point_tv"
        app:layout_constraintRight_toRightOf="parent"
        tool:text="/两周" />

    <TextView
        android:id="@+id/home_course_price_new_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_17dp"
        android:textColor="@color/chn_color_f76561"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/home_course_price_unit_tv"
        app:layout_constraintRight_toLeftOf="@id/home_course_price_unit_tv"
        tool:text="49" />

    <TextView
        android:id="@+id/home_course_price_symbol_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥"
        android:textColor="@color/chn_color_f76561"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/home_course_price_unit_tv"
        app:layout_constraintRight_toLeftOf="@id/home_course_price_new_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ch_view_item_price_old_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_17dp"
        android:textColor="@color/chn_color_black_999999"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/home_course_price_unit_tv"
        app:layout_constraintRight_toLeftOf="@id/home_course_price_symbol_tv"
        app:layout_constraintTop_toTopOf="parent"
        tool:text="109" />

    <TextView
        android:id="@+id/ch_view_item_price_old_unit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_17dp"
        android:textColor="@color/chn_color_black_999999"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/home_course_price_unit_tv"
        app:layout_constraintRight_toLeftOf="@id/ch_view_item_price_old_tv"
        app:layout_constraintTop_toTopOf="parent"
        tool:text="¥" />

    <com.bee.home.fragment.widget.HomeJzCommonPlayer
        android:id="@+id/ch_view_item_experience_show_vp"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="@dimen/size_0dp"
        android:layout_marginTop="@dimen/size_83dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ch_view_item_experience_show_vp_iv"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="@dimen/size_0dp"
        android:layout_marginTop="@dimen/size_83dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.bee.home.fragment.widget.HomeCourseBottomView
        android:id="@+id/ch_view_item_experience_bottom_view"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="@dimen/size_0dp"
        android:layout_marginTop="@dimen/size_83dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/ch_view_item_experience_vp_click_view"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="@dimen/size_0dp"
        android:layout_marginTop="@dimen/size_83dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>