<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_379dp">

    <com.bee.android.common.view.shadow.ShadowClipConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_349dp"
        android:layout_marginStart="@dimen/size_20dp"
        android:layout_marginTop="@dimen/size_10dp"
        android:layout_marginEnd="@dimen/size_20dp"
        android:layout_marginBottom="@dimen/size_20dp"
        android:background="@android:color/white"
        android:elevation="10dp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shadowAlpha="0.45"
        app:shadowRadius="@dimen/size_15dp">

        <com.bee.home.fragment.widget.HomeCoursePageTopView
            android:id="@+id/home_course_page_top_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/home_course_page_bottom_bg"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="@dimen/size_66dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/home_course_page_class_open_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_15dp"
            android:textColor="@color/chn_color_999999"
            android:textSize="@dimen/sp_12"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/home_course_page_bottom_bg"
            app:layout_constraintLeft_toLeftOf="@id/home_course_page_bottom_bg"
            app:layout_constraintTop_toTopOf="@id/home_course_page_bottom_bg"
            tool:text="9月9号" />

        <TextView
            android:id="@+id/home_course_page_class_open_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_3dp"
            android:textColor="@color/chn_color_222222"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/home_course_page_bottom_bg"
            app:layout_constraintLeft_toRightOf="@id/home_course_page_class_open_date_tv"
            app:layout_constraintTop_toTopOf="@id/home_course_page_bottom_bg"
            tool:text="12:00" />

        <TextView
            android:id="@+id/home_course_page_class_open_end_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_3dp"
            android:textColor="@color/chn_color_999999"
            android:textSize="@dimen/sp_12"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/home_course_page_bottom_bg"
            app:layout_constraintLeft_toRightOf="@id/home_course_page_class_open_time_tv"
            app:layout_constraintTop_toTopOf="@id/home_course_page_bottom_bg"
            tool:text="开售" />

        <TextView
            android:id="@+id/home_course_page_class_left_num_one_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_15dp"
            android:textColor="@color/chn_color_999999"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="@id/home_course_page_bottom_bg"
            app:layout_constraintLeft_toLeftOf="@id/home_course_page_bottom_bg"
            app:layout_constraintTop_toTopOf="@id/home_course_page_bottom_bg"
            tool:text="剩余" />

        <TextView
            android:id="@+id/home_course_page_class_left_num_two_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_3dp"
            android:layout_marginBottom="@dimen/size_16dp"
            android:includeFontPadding="false"
            android:textColor="@color/chn_color_222222"
            android:textSize="@dimen/sp_30"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/home_course_page_bottom_bg"
            app:layout_constraintLeft_toRightOf="@id/home_course_page_class_left_num_one_tv"
            tool:text="68" />

        <TextView
            android:id="@+id/home_course_page_class_left_num_three_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_3dp"
            android:textColor="@color/chn_color_999999"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="@id/home_course_page_bottom_bg"
            app:layout_constraintLeft_toRightOf="@id/home_course_page_class_left_num_two_tv"
            app:layout_constraintTop_toTopOf="@id/home_course_page_bottom_bg"
            tool:text="/3000份" />

        <TextView
            android:id="@+id/home_course_page_subscribe_tv"
            android:layout_width="@dimen/size_100dp"
            android:layout_height="@dimen/size_40dp"
            android:layout_marginEnd="@dimen/size_15dp"
            android:background="@drawable/common_shape_bg_radius_45_fd8a6b"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_15"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/home_course_page_bottom_bg"
            app:layout_constraintRight_toRightOf="@id/home_course_page_bottom_bg"
            app:layout_constraintTop_toTopOf="@id/home_course_page_bottom_bg"
            tool:text="立即订阅" />

        <com.bee.home.fragment.widget.TimeShowLayout
            android:id="@+id/home_course_page_time_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_15dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/home_course_page_bottom_bg"
            app:layout_constraintRight_toRightOf="@id/home_course_page_bottom_bg"
            app:layout_constraintTop_toTopOf="@id/home_course_page_bottom_bg" />


        <TextView
            android:id="@+id/home_course_page_distance_sale_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_5dp"
            android:text="@string/home_distance_sale"
            android:textColor="@color/chn_color_999999"
            android:textSize="@dimen/sp_12"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/home_course_page_bottom_bg"
            app:layout_constraintRight_toLeftOf="@id/home_course_page_time_show"
            app:layout_constraintTop_toTopOf="@id/home_course_page_bottom_bg" />

        <TextView
            android:id="@+id/home_course_page_sale_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_15dp"
            android:textColor="@color/chn_color_999999"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="@id/home_course_page_bottom_bg"
            app:layout_constraintRight_toRightOf="@id/home_course_page_bottom_bg"
            app:layout_constraintTop_toTopOf="@id/home_course_page_bottom_bg"
            tool:text="已售罄，剩余0/3000份" />

        <com.bee.home.fragment.widget.HeaderAndTextLayout
            android:id="@+id/home_course_page_header_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_15dp"
            android:layout_marginTop="@dimen/size_98dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </com.bee.android.common.view.shadow.ShadowClipConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>