<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/home_view_course_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp"
        android:layout_marginStart="@dimen/size_10dp"
        app:tabBackground="@android:color/transparent"
        app:tabGravity="fill"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="@dimen/size_0dp"
        app:tabMode="scrollable"
        app:tabPadding="@dimen/size_0dp"
        app:tabRippleColor="@android:color/transparent"
        app:tabSelectedTextColor="@color/chn_color_222222"
        app:tabTextAppearance="@style/HomeTabLayoutNormalTextSize"
        app:tabTextColor="@color/chn_color_666666" />

    <com.bee.android.common.view.WrapContentHeightViewPager
        android:id="@+id/home_view_course_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size_15dp" />

</LinearLayout>