<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_379dp">

    <com.bee.android.common.view.shadow.ShadowClipConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_349dp"
        android:layout_marginStart="@dimen/size_20dp"
        android:layout_marginTop="@dimen/size_10dp"
        android:layout_marginEnd="@dimen/size_20dp"
        android:layout_marginBottom="@dimen/size_20dp"
        android:background="@android:color/white"
        android:elevation="10dp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shadowAlpha="0.45"
        app:shadowRadius="@dimen/size_15dp">

        <com.bee.home.fragment.widget.HomeCoursePageTopView
            android:id="@+id/home_course_page_system_top_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/home_course_page_bottom_bg"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="@dimen/size_66dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/home_course_page_system_subscribe_tv"
            android:layout_width="@dimen/size_160dp"
            android:layout_height="@dimen/size_40dp"
            android:background="@drawable/common_shape_bg_radius_45_fd8a6b"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_16"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/home_course_page_bottom_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/home_course_page_bottom_bg"
            app:layout_constraintTop_toTopOf="@id/home_course_page_bottom_bg"
            tool:text="立即订阅" />

    </com.bee.android.common.view.shadow.ShadowClipConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>