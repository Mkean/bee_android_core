<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/size_192dp"
        android:layout_height="@dimen/size_154dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/common_no_works" />

    <TextView
        android:id="@+id/retry_view"
        android:layout_width="@dimen/size_250dp"
        android:layout_height="@dimen/sp_50"
        android:layout_below="@id/image_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_30dp"
        android:background="@drawable/common_shape_ff8a66_25"
        android:gravity="center"
        android:text="@string/common_click_again"
        android:textColor="@color/common_color_ffffff"
        android:textSize="@dimen/sp_20" />

    <TextView
        android:id="@+id/hint_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/retry_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_20dp"
        android:gravity="center_horizontal"
        android:text="@string/common_no_data"
        android:textColor="@color/common_color_666666"
        android:textSize="@dimen/sp_14" />

</RelativeLayout>