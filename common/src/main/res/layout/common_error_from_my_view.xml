<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_view"
        android:layout_width="@dimen/size_301dp"
        android:layout_height="@dimen/size_135dp"
        android:layout_centerHorizontal="true"
        app:lottie_fileName="status_view/error/net_error.json"
        app:lottie_imageAssetsFolder="status_view/error/images/"
        app:lottie_repeatCount="-1" />

    <TextView
        android:id="@+id/retry_view"
        android:layout_width="@dimen/size_145dp"
        android:layout_height="@dimen/size_37dp"
        android:layout_below="@id/lottie_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_40dp"
        android:background="@drawable/common_shape_ff8a66_25"
        android:gravity="center"
        android:text="@string/common_click_again"
        android:textColor="@color/common_color_ffffff"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/hint_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/retry_view"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_15dp"
        android:text="@string/common_load_error"
        android:textColor="@color/common_color_666666"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>
