<?xml version="1.0" encoding="utf-8"?>
<com.bee.android.common.view.shadow.ShadowClipConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/size_285dp"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    app:shadowRadius="@dimen/size_15dp">

    <TextView
        android:id="@+id/dialog_titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_25dp"
        android:layout_marginTop="@dimen/size_25dp"
        android:layout_marginEnd="@dimen/size_25dp"
        android:textColor="@color/common_color_222222"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="标题" />

    <TextView
        android:id="@+id/dialog_contentTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_25dp"
        android:layout_marginTop="@dimen/size_15dp"
        android:layout_marginEnd="@dimen/size_25dp"
        android:gravity="left|center"
        android:textColor="@color/common_color_333333"
        android:textSize="@dimen/sp_13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_titleTv" />

    <TextView
        android:id="@+id/dialog_upTv"
        android:layout_width="@dimen/size_235dp"
        android:layout_height="@dimen/size_37dp"
        android:layout_marginTop="@dimen/size_25dp"
        android:background="@drawable/common_shape_ff8a66_18_5"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/common_color_ffffff"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_contentTv" />

    <TextView
        android:id="@+id/dialog_downUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/size_15dp"
        android:text="取消"
        android:textColor="@color/common_color_999999"
        android:textSize="@dimen/sp_13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_upTv" />

</com.bee.android.common.view.shadow.ShadowClipConstraintLayout>