<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/size_192dp"
        android:layout_height="@dimen/size_145dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/common_no_works" />

    <TextView
        android:id="@+id/hint_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_view"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_30dp"
        android:text="@string/common_no_works"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/common_color_666666"/>

</RelativeLayout>