<?xml version="1.0" encoding="utf-8"?>
<com.bee.android.common.view.shadow.ShadowClipConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/size_250dp"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    app:shadowRadius="@dimen/size_15dp">


    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_25dp"
        android:layout_marginTop="@dimen/size_25dp"
        android:layout_marginRight="@dimen/size_25dp"
        android:gravity="center"
        android:text="标题"
        android:textColor="@color/common_color_222222"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5dp"
        android:layout_marginTop="@dimen/size_25dp"
        android:background="@color/common_color_cccccc"
        app:layout_constraintTop_toBottomOf="@id/titleTv" />

    <View
        android:id="@+id/vLine"
        android:layout_width="@dimen/size_0_5dp"
        android:layout_height="@dimen/size_44dp"
        android:background="@color/common_color_cccccc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewLine" />

    <TextView
        android:id="@+id/leftTv"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="@dimen/size_0dp"
        android:gravity="center"
        android:text="不同意"
        android:textColor="@color/common_color_333333"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="@id/vLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/vLine"
        app:layout_constraintTop_toTopOf="@id/vLine" />

    <TextView
        android:id="@+id/rightTv"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="@dimen/size_0dp"
        android:gravity="center"
        android:text="同意"
        android:textColor="@color/common_color_ff8a66"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="@id/vLine"
        app:layout_constraintLeft_toRightOf="@id/vLine"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/vLine" />

</com.bee.android.common.view.shadow.ShadowClipConstraintLayout>