<?xml version="1.0" encoding="utf-8"?>
<com.bee.android.common.view.shadow.ShadowClipConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_30dp"
    android:background="@color/common_color_80000000"
    app:shadowRadius="@dimen/size_15dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieView"
        android:layout_width="@dimen/size_20dp"
        android:layout_height="@dimen/size_29dp"
        android:layout_marginTop="@dimen/size_19dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_fileName="common/funnel/shalou.json"
        app:lottie_imageAssetsFolder="common/funnel/images/" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_9dp"
        android:paddingLeft="@dimen/size_25dp"
        android:paddingRight="@dimen/size_25dp"
        android:paddingBottom="@dimen/size_20dp"
        android:text="正在跳转微信正在信"
        android:textColor="@android:color/white"
        android:textSize="@dimen/size_13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lottieView" />


</com.bee.android.common.view.shadow.ShadowClipConstraintLayout>