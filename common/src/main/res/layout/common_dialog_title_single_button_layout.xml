<?xml version="1.0" encoding="utf-8"?>
<com.bee.android.common.view.shadow.ShadowClipConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/size_250dp"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    app:shadowRadius="@dimen/size_15dp">

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_25dp"
        android:layout_marginTop="@dimen/size_25dp"
        android:layout_marginRight="@dimen/size_25dp"
        android:text="标题"
        android:textColor="@color/common_color_222222"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contentTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_25dp"
        android:layout_marginTop="@dimen/size_6dp"
        android:layout_marginRight="@dimen/size_25dp"
        android:gravity="center|left"
        android:text="啦啦啦啦啦啦啦啦啦啦啦啦啦阿里拉阿拉啦啦啦啦啦拉拉阿拉啦阿里啦啦啦啦啊啊啦"
        android:textColor="@color/common_color_333333"
        android:textSize="@dimen/sp_13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTv" />

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0_5dp"
        android:layout_marginTop="@dimen/size_25dp"
        android:background="@color/common_color_cccccc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contentTv" />

    <TextView
        android:id="@+id/single_sure_tv"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="@dimen/size_44dp"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/common_color_ff8a66"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewLine" />
</com.bee.android.common.view.shadow.ShadowClipConstraintLayout>