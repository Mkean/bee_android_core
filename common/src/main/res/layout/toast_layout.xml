<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/common_toast_bg"
    android:padding="@dimen/size_20dp">


    <ImageView
        android:id="@+id/toastImageView"
        android:layout_width="@dimen/size_21dp"
        android:layout_height="@dimen/size_21dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/size_5dp"
        android:visibility="gone"
        tool:background="@drawable/icon_toast_warning" />

    <TextView
        android:id="@+id/toastTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toastImageView"
        android:layout_marginLeft="@dimen/size_26dp"
        android:layout_marginRight="@dimen/size_26dp"
        android:text="积分不足"
        android:textColor="@color/common_color_ffffff"
        android:textSize="@dimen/sp_13" />

</RelativeLayout>