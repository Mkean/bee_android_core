<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_view"
        android:layout_width="@dimen/size_301dp"
        android:layout_height="@dimen/size_135dp"
        android:layout_centerHorizontal="true"
        app:lottie_fileName="status_view/xuanke/xuankeye.json"
        app:lottie_imageAssetsFolder="status_view/xuanke/images/"
        app:lottie_repeatCount="-1" />

    <TextView
        android:id="@+id/hint_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lottie_view"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_20dp"
        android:text="@string/common_choose_course_from_my_tip"
        android:textColor="@color/common_color_666666"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>
