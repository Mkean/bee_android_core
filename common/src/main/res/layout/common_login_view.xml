<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_view"
        android:layout_width="@dimen/size_335dp"
        android:layout_height="@dimen/size_150dp"
        android:layout_centerHorizontal="true"
        app:lottie_fileName="status_view/login/dengluye.json"
        app:lottie_imageAssetsFolder="status_view/login/images/"
        app:lottie_repeatCount="-1" />

    <TextView
        android:id="@+id/retry_view"
        android:layout_width="@dimen/size_250dp"
        android:layout_height="@dimen/size_50dp"
        android:layout_below="@id/lottie_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_75dp"
        android:background="@drawable/common_shape_ff8a66_25"
        android:gravity="center"
        android:text="@string/common_login"
        android:textColor="@color/common_color_ffffff"
        android:textSize="@dimen/sp_20" />

    <TextView
        android:id="@+id/hint_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/retry_view"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_20dp"
        android:text="@string/common_login_tip"
        android:textColor="@color/common_color_666666"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>
