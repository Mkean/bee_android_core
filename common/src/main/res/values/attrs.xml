<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="common_shadowRl">
        <attr name="shadowAlpha" format="float" />
        <attr name="shadowRadius" format="dimension" />
    </declare-styleable>


    <declare-styleable name="common_NiceImageView">
        <attr name="common_nice_is_circle" format="boolean" />
        <attr name="common_nice_is_cover_src" format="boolean" />
        <attr name="common_nice_corner_radius" format="dimension" />
        <attr name="common_nice_corner_top_left_radius" format="dimension" />
        <attr name="common_nice_corner_top_right_radius" format="dimension" />
        <attr name="common_nice_corner_bottom_left_radius" format="dimension" />
        <attr name="common_nice_corner_bottom_right_radius" format="dimension" />
        <attr name="common_nice_border_width" format="dimension" />
        <attr name="common_nice_border_color" format="color" />
        <attr name="common_nice_inner_border_width" format="dimension" />
        <attr name="common_nice_inner_border_color" format="color" />
        <attr name="common_nice_mask_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ShadowLayout">
        <!--阴影的圆角大小-->
        <attr name="yc_cornerRadius" format="dimension" />
        <!--阴影的扩散范围-->
        <attr name="yc_shadowLimit" format="dimension" />
        <!--阴影颜色-->
        <attr name="yc_shadowColor" format="color" />
        <!--X轴偏移量-->
        <attr name="yc_dx" format="dimension" />
        <!--Y轴偏移量-->
        <attr name="yc_dy" format="dimension" />
        <!--左边是否显示阴影-->
        <attr name="yc_leftShow" format="boolean" />
        <!--右边是否显示阴影-->
        <attr name="yc_rightShow" format="boolean" />
        <!--上边是否显示阴影-->
        <attr name="yc_topShow" format="boolean" />
        <!--下边是否显示阴影-->
        <attr name="yc_bottomShow" format="boolean" />
    </declare-styleable>

    <!--仿iOS的SwitchButton-->
    <declare-styleable name="common_SwitchButton">
        <attr name="common_shadow_radius" format="reference|dimension" />
        <attr name="common_shadow_offset" format="reference|dimension" />
        <attr name="common_shadow_color" format="reference|color" />
        <attr name="common_uncheck_color" format="reference|color" />
        <attr name="common_checked_color" format="reference|color" />

        <attr name="common_sb_border_width" format="reference|dimension" />
        <attr name="common_check_line_color" format="reference|color" />
        <attr name="common_check_line_width" format="reference|dimension" />
        <attr name="common_uncheck_circle_color" format="reference|color" />
        <attr name="common_uncheck_circle_width" format="reference|dimension" />
        <attr name="common_uncheck_circle_radius" format="reference|dimension" />

        <attr name="common_checked" format="reference|boolean" />
        <attr name="common_shadow_effect" format="reference|boolean" />
        <attr name="common_effect_duration" format="reference|integer" />
        <attr name="common_button_color" format="reference|color" />
        <attr name="common_show_indicator" format="reference|color" />
        <attr name="common_background" format="reference|color" />
        <attr name="common_enable_effect" format="reference|boolean" />

        <attr name="common_checked_button_color" format="reference|color" />
        <attr name="common_uncheck_button_color" format="reference|color" />

    </declare-styleable>
</resources>