<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="CommonRemindDialog" parent="android:Theme.Dialog">

        <!--窗口背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否有边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否悬浮在Activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--阴影-->
        <item name="android:windowIsTranslucent">true</item>
        <!--标题-->
        <item name="android:windowNoTitle">true</item>
        <!--弹框背景是否变暗-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--是否有遮盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--控制灰度，当为1时，界面除了我们的dialog内容是高亮外，以外区域是黑色，完全看不到内容-->
        <item name="android:backgroundDimAmount">0.4</item>
        <!--动画-->
        <item name="android:windowAnimationStyle">@style/common_NewActionSheetDialogAnimation</item>

    </style>

    <style name="common_NewActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowExitAnimation">@anim/common_dialog_dismiss_animation</item>
    </style>

    <style name="common_toast_CommonRemindDialog" parent="CommonRemindDialog">
        <item name="android:backgroundDimAmount">0.0</item>
    </style>

    <style name="common_base_AppCompat.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/common_progress_large_white</item>
        <item name="android:minWidth">@dimen/size_76dp</item>

        <item name="android:maxWidth">@dimen/size_76dp</item>

        <item name="android:minHeight">@dimen/size_76dp</item>

        <item name="android:maxHeight">@dimen/size_76dp</item>
    </style>

    <style name="common_Loading.more_AppCompat.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/common_progress_small_loading_more</item>
        <item name="android:minWidth">16dip</item>
        　　
        <item name="android:maxWidth">16dip</item>
        　　
        <item name="android:minHeight">16dip</item>
        　　
        <item name="android:maxHeight">16dip</item>
    </style>

    <declare-styleable name="MultipleStatusView">

        <attr name="loadingView" format="reference" />
        <attr name="errorView" format="reference" />
        <attr name="emptyView" format="reference" />
        <attr name="emptyFromWorkWallView" format="reference" />
        <attr name="noNetworkView" format="reference" />
        <attr name="loginView" format="reference" />
        <attr name="errorFromMyView" format="reference" />

    </declare-styleable>
</resources>